{
  "name": "Penguin",
  "productName": "Penguin",
  "version": "1",
  "description": "Penguin",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "publish-windows": "electron-forge publish",
    "publish-mac": "electron-forge publish --arch=x64",
    "publish-git": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": "Juizzi",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "lib/icons/icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Penguin",
            "authors": "Penguin",
            "loadingGif": "./src/assets/default-splash.gif",
            "setupIcon": "./lib/icons/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-flatpak",
          "config": {
            "genericName": "Penguin",
            "productName": "Penguin",
            "categories": [
              "Game"
            ],
            "icon": "./lib/icons/icon.ico"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Penguin",
              "name": "Penguin"
            },
            "prerelease": true
          }
        }
      ]
    }
  },
  "build": {
    "extraResources": [
      {
        "from": "./lib/",
        "to": "lib",
        "filter": [
          "**/*"
        ]
      }
    ],
    "appId": "Penguin",
    "productName": "Penguin",
    "copyright": "Copyright Â© 2022 ${Juizzi}",
    "mac": {
      "icon": "./lib/icons/icon.icns",
      "category": "lib.games.newcp"
    },
    "win": {
      "icon": "./lib/icons/icon.png"
    },
    "directories": {
      "buildResources": "lib"
    },
    "protocols": [
      {
        "name": "newcp",
        "schemes": [
          "newcp"
        ]
      }
    ]
  },
  "dependencies": {
    "@electron-forge/maker-flatpak": "^6.0.0-beta.64",
    "async-dialog": "0.0.1",
    "dialogs": "^2.0.1",
    "discord-rich-presence": "^0.0.8",
    "electron-prompt": "^1.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-appx": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "electron": "11.1.1"
  }
}
